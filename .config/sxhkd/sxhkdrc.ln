super + Return
    urxvt

super + w
    chromium

super + W
    chromium --incognito

super + f
    urxvt -e zsh -ic ranger

super + m
    urxvt -e zsh -ic ncmpcpp

super + d
    ~/bin/launcher

ctrl + shift + k ; {g,e,a,h,c,j,r}
    setxkbmap {gr,us,ara,il,cn,jp,ru}

ctrl + alt + p
    ~/.config/panel/panel &

ctrl + alt + k
    pkill -SIGUSR1 sxhkd

super + shift + z
    ~/bin/lock


# =============
# ┏┳┓┏━╸╺┳┓╻┏━┓
# ┃┃┃┣╸  ┃┃┃┣━┫
# ╹ ╹┗━╸╺┻┛╹╹ ╹
# =============


XF86AudioPlay
    mpc toggle

XF86Audio{Next,Prev}
    mpc {next,prev}

super + shift + p
    mpc stop

super + ctrl + m ; {r,z,y,R}
    mpc {repeat,random,single,consume}

XF86Audio{Raise,Lower}Volume
    amixer set Master 3%{+,-} && ~/bin/vol_pop

XF86AudioMute
    amixer set Master toggle


