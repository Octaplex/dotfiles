super + p
    mpc toggle
super + {_,shift + }n
    mpc {next,prev}
super + shift + p
    mpc stop
super + ctrl + m ; {r,z,y,R}
    mpc {repeat,random,single,consume}

super + shift + period
    amixer set Master 3%+ && ~/bin/vol_pop
super + shift + comma
    amixer set Master 3%- && ~/bin/vol_pop
super + shift + slash
    amixer set Master toggle

super + shift + z
    ~/bin/lock
